
public class PythagoremTrip {

	
	public static void main(String[] args){
		for(int i = 1; i < 100; i++){
			int s = 1;
			if(i == 99) s++;
			int total = (int)Math.pow(i, 2) + (int)Math.pow(s, 2);
			if(pie(total) == true)System.out.println(i+ "+ " + s+ "= " + total);
			
		}

		
	}
	
	public static boolean pie(int n){
		int n = (int)Math.sqrt(n);
		double check = Math.pow(n,2);
		if(check == n){
			return true;
		}
		return false;
	}
	
}
