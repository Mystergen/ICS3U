/**
 * PrimeAllDay
 * Finds out if the number inputed is prime
 * @author ethanzhou
 *April 4 2017
 */
import java.util.Scanner;
public class isPrime {
	static Scanner sc = new Scanner(System.in);
	public static void main(String[] args) {
		System.out.println("Input a number, and I will tell you if it is prime or not");
		int input = sc.nextInt();
		System.out.println(iPrime(input));
	}
	public static boolean iPrime(int real){
		int check = real;
		int total = real;
		boolean prime;
		while((total = real%(check--)) != 0 && check > 1){
			check--;
		}
		if (total == 0){
			return prime = true;
		}else{
			return prime = false;
		}
	}
}
