
public class PythagoremTrip {

	
	public static void main(String[] args){
		for(int i = 1, counter = 1; i <= counter && counter < 100; i++){
			if ( i == 99){
				counter++;
			}
			int s = 1;
			if(i == 99) s++;
			int total = (int)Math.pow(i, 2) + (int)Math.pow(s, 2);
			if(pie(total) == true)System.out.println(i+ "+ " + s+ "= " + total);
			
		}

		
	}
	
	public static boolean pie(int n){
		int x = (int)Math.sqrt(n);
		double check = Math.pow(x,2);
		if(check == n){
			return true;
		}else{
			return false;
		}
	}
	
}
